<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.santayn.bankdeposit.ui.LoginController">

    <center>
        <VBox spacing="12.0" alignment="CENTER">
            <padding>
                <Insets top="20.0" right="25.0" bottom="20.0" left="25.0"/>
            </padding>

            <Label text="Вход в систему"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints minWidth="90.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Логин:"
                       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="usernameField"
                           promptText="Введите логин"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Пароль:"
                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField"
                               promptText="Введите пароль"
                               GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Button fx:id="loginButton"
                        text="Войти"
                        defaultButton="true"
                        onAction="#onLogin"/>

                <Button fx:id="exitButton"
                        text="Выход"
                        cancelButton="true"
                        onAction="#onExit"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
