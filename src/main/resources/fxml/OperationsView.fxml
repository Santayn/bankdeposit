<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.santayn.bankdeposit.ui.OperationsController">

    <top>
        <VBox spacing="8.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="0.0" left="10.0"/>
            </padding>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Операции по вкладам"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <Pane HBox.hgrow="ALWAYS"/>

                <Label text="Договор:"/>
                <ComboBox fx:id="contractComboBox" prefWidth="320.0"/>

                <Button fx:id="refreshButton"
                        text="Обновить"
                        onAction="#onRefresh"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="8.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <TableView fx:id="operationsTable" prefHeight="260.0">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="70.0"/>
                    <TableColumn fx:id="dateTimeColumn" text="Дата и время" prefWidth="160.0"/>
                    <TableColumn fx:id="typeColumn" text="Тип операции" prefWidth="150.0"/>
                    <TableColumn fx:id="amountColumn" text="Сумма" prefWidth="140.0"/>
                    <TableColumn fx:id="descriptionColumn" text="Описание" prefWidth="320.0"/>
                </columns>
            </TableView>

            <TitledPane text="Выполнить операцию" expanded="true">
                <content>
                    <GridPane hgap="10.0" vgap="8.0">
                        <padding>
                            <Insets top="8.0" right="8.0" bottom="8.0" left="8.0"/>
                        </padding>

                        <columnConstraints>
                            <ColumnConstraints minWidth="140.0"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                            <ColumnConstraints minWidth="140.0"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="Сумма:"
                               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="amountField"
                                   promptText="Например, 10000.50"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Описание:"
                               GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <TextField fx:id="descriptionField"
                                   promptText="Необязательно"
                                   GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                        <HBox spacing="10.0" alignment="CENTER_RIGHT"
                              GridPane.rowIndex="1" GridPane.columnIndex="0"
                              GridPane.columnSpan="4">

                            <Button fx:id="depositButton"
                                    text="Пополнение"
                                    onAction="#onDeposit"/>

                            <Button fx:id="withdrawButton"
                                    text="Снятие"
                                    onAction="#onWithdraw"/>

                            <Button fx:id="interestButton"
                                    text="Начислить проценты"
                                    onAction="#onAccrueInterest"/>
                        </HBox>

                    </GridPane>
                </content>
            </TitledPane>

        </VBox>
    </center>

</BorderPane>
