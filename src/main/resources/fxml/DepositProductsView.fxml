<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.santayn.bankdeposit.ui.DepositProductsController">

    <center>
        <VBox spacing="8.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <!-- Заголовок и поиск по названию -->
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Депозитные продукты"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <Pane HBox.hgrow="ALWAYS"/>

                <Label text="Поиск по названию:"/>
                <TextField fx:id="nameSearchField" prefWidth="200.0"/>
                <Button fx:id="findByNameButton"
                        text="Найти"
                        onAction="#onFindByName"/>
            </HBox>

            <!-- Таблица продуктов -->
            <TableView fx:id="productsTable" prefHeight="220.0">
                <columns>
                    <TableColumn fx:id="nameColumn"
                                 text="Название" prefWidth="180.0"/>
                    <TableColumn fx:id="termColumn"
                                 text="Срок" prefWidth="90.0"/>

                    <!-- НЕ начинаем с % -->
                    <TableColumn fx:id="rateColumn"
                                 text="Ставка (% годовых)" prefWidth="130.0"/>

                    <TableColumn fx:id="minAmountColumn"
                                 text="Мин. сумма" prefWidth="110.0"/>
                    <TableColumn fx:id="maxAmountColumn"
                                 text="Макс. сумма" prefWidth="110.0"/>
                    <TableColumn fx:id="replColumn"
                                 text="Пополнение" prefWidth="90.0"/>
                    <TableColumn fx:id="partialWithdrawColumn"
                                 text="Частичное снятие" prefWidth="120.0"/>
                    <TableColumn fx:id="capitalizationColumn"
                                 text="Капитализация" prefWidth="110.0"/>
                </columns>
            </TableView>

            <!-- Форма редактирования -->
            <TitledPane text="Параметры депозитного продукта" expanded="true">
                <content>
                    <GridPane hgap="10.0" vgap="8.0">
                        <padding>
                            <Insets top="8.0" right="8.0" bottom="8.0" left="8.0"/>
                        </padding>

                        <columnConstraints>
                            <ColumnConstraints minWidth="120.0"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                            <ColumnConstraints minWidth="120.0"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <!-- Левая колонка -->
                        <Label text="Название:"
                               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="nameField"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <!-- НЕ начинаем текст с % -->
                        <Label text="Ставка (процентов годовых):"
                               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="rateField"
                                   promptText="Например, 7.5"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Срок (мес.):"
                               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="termMonthsField"
                                   promptText="0 — бессрочный"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Описание:"
                               GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextArea fx:id="descriptionArea"
                                  prefRowCount="3"
                                  GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <!-- Правая колонка -->
                        <Label text="Мин. сумма:"
                               GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <TextField fx:id="minAmountField"
                                   promptText="Например, 10000"
                                   GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                        <Label text="Макс. сумма:"
                               GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <TextField fx:id="maxAmountField"
                                   promptText="Можно оставить пустым"
                                   GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                        <Label text="Возможности:"
                               GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                        <VBox spacing="4.0"
                              GridPane.rowIndex="2" GridPane.columnIndex="3">
                            <CheckBox fx:id="allowReplenishmentCheckBox"
                                      text="Разрешено пополнение"/>
                            <CheckBox fx:id="allowPartialWithdrawalCheckBox"
                                      text="Разрешено частичное снятие"/>
                            <CheckBox fx:id="capitalizationCheckBox"
                                      text="Капитализация процентов"/>
                        </VBox>

                        <!-- Кнопки -->
                        <HBox spacing="10.0" alignment="CENTER_RIGHT"
                              GridPane.rowIndex="4" GridPane.columnIndex="0"
                              GridPane.columnSpan="4">
                            <Button fx:id="newButton"
                                    text="Новый"
                                    onAction="#onNewProduct"/>
                            <Button fx:id="saveButton"
                                    text="Сохранить"
                                    onAction="#onSaveProduct"/>
                            <Button fx:id="deleteButton"
                                    text="Удалить"
                                    onAction="#onDeleteProduct"/>
                            <Button fx:id="clearButton"
                                    text="Очистить"
                                    onAction="#onClearForm"/>
                        </HBox>

                    </GridPane>
                </content>
            </TitledPane>

        </VBox>
    </center>

</BorderPane>
