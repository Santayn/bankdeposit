<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.santayn.bankdeposit.ui.ContractsController">

    <!-- Верхняя панель: кнопка обновления -->
    <top>
        <HBox spacing="10.0" padding="10.0">
            <children>
                <Button fx:id="refreshButton"
                        text="Обновить данные"
                        onAction="#onRefresh"/>
            </children>
        </HBox>
    </top>

    <!-- Центр: таблица вкладов -->
    <center>
        <TableView fx:id="contractsTable" prefHeight="350.0">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60.0"/>
                <TableColumn fx:id="colContractNumber" text="№ договора" prefWidth="120.0"/>
                <TableColumn fx:id="colCustomer" text="Клиент" prefWidth="180.0"/>
                <TableColumn fx:id="colProduct" text="Продукт" prefWidth="180.0"/>
                <TableColumn fx:id="colOpenDate" text="Открыт" prefWidth="90.0"/>
                <TableColumn fx:id="colCloseDate" text="Закрыт" prefWidth="90.0"/>
                <TableColumn fx:id="colBalance" text="Баланс" prefWidth="100.0"/>
                <TableColumn fx:id="colRate" text="% годовых" prefWidth="90.0"/>
                <TableColumn fx:id="colStatus" text="Статус" prefWidth="90.0"/>
            </columns>
        </TableView>
    </center>

    <!-- Низ: открытие вклада + операции -->
    <bottom>
        <VBox spacing="10.0" padding="10.0">

            <!-- Блок открытия нового вклада -->
            <TitledPane text="Открытие нового вклада" expanded="true">
                <content>
                    <GridPane hgap="10.0" vgap="10.0" padding="10.0">
                        <columnConstraints>
                            <ColumnConstraints minWidth="120.0" halignment="RIGHT"/>
                            <ColumnConstraints minWidth="200.0" hgrow="ALWAYS"/>
                            <ColumnConstraints minWidth="120.0" halignment="RIGHT"/>
                            <ColumnConstraints minWidth="200.0" hgrow="ALWAYS"/>
                        </columnConstraints>

                        <children>
                            <Label text="Клиент:"
                                   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="openCustomerCombo"
                                      GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Продукт:"
                                   GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                            <ComboBox fx:id="openProductCombo"
                                      GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                            <Label text="Сумма:"
                                   GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="initialAmountField"
                                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Дата открытия:"
                                   GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                            <DatePicker fx:id="openDatePicker"
                                        GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                        </children>
                    </GridPane>
                </content>
            </TitledPane>

            <HBox spacing="10.0">
                <children>
                    <Button fx:id="openContractButton"
                            text="Открыть вклад"
                            onAction="#onOpenContract"/>
                </children>
            </HBox>

            <!-- Блок операций по выбранному вкладу -->
            <TitledPane text="Операции по выбранному вкладу" expanded="true">
                <content>
                    <VBox spacing="10.0" padding="10.0">
                        <children>
                            <TableView fx:id="operationsTable" prefHeight="180.0">
                                <columns>
                                    <TableColumn fx:id="colOpDateTime" text="Дата и время" prefWidth="160.0"/>
                                    <TableColumn fx:id="colOpType" text="Тип" prefWidth="120.0"/>
                                    <TableColumn fx:id="colOpAmount" text="Сумма" prefWidth="120.0"/>
                                    <TableColumn fx:id="colOpDescription" text="Описание" prefWidth="300.0"/>
                                </columns>
                            </TableView>

                            <HBox spacing="10.0">
                                <children>
                                    <Button fx:id="depositButton"
                                            text="Пополнить"
                                            onAction="#onDeposit"/>
                                    <Button fx:id="withdrawButton"
                                            text="Снять"
                                            onAction="#onWithdraw"/>
                                    <Button fx:id="accrueInterestButton"
                                            text="Начислить проценты"
                                            onAction="#onAccrueInterest"/>
                                    <Button fx:id="closeContractButton"
                                            text="Закрыть вклад"
                                            onAction="#onCloseContract"/>
                                </children>
                            </HBox>
                        </children>
                    </VBox>
                </content>
            </TitledPane>

        </VBox>
    </bottom>

</BorderPane>
