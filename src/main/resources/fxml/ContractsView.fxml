<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.santayn.bankdeposit.ui.ContractsController">

    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <Label text="Договоры вкладов"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Таблица договоров -->
            <TableView fx:id="contractsTable" prefHeight="260.0">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0"/>
                    <TableColumn fx:id="contractNumberColumn" text="Номер" prefWidth="110.0"/>
                    <TableColumn fx:id="customerColumn" text="Клиент" prefWidth="180.0"/>
                    <TableColumn fx:id="productColumn" text="Продукт" prefWidth="180.0"/>
                    <TableColumn fx:id="openDateColumn" text="Открыт" prefWidth="90.0"/>
                    <TableColumn fx:id="statusColumn" text="Статус" prefWidth="80.0"/>
                    <TableColumn fx:id="balanceColumn" text="Баланс" prefWidth="100.0"/>
                </columns>
            </TableView>

            <!-- Блок открытия вклада -->
            <TitledPane text="Открытие вклада" expanded="true">
                <content>
                    <GridPane hgap="10.0" vgap="8.0">
                        <padding>
                            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                        </padding>

                        <columnConstraints>
                            <ColumnConstraints minWidth="100.0"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                            <ColumnConstraints minWidth="100.0"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="Клиент:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="customerComboBox"
                                  GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Продукт:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="productComboBox"
                                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Дата откр.:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <DatePicker fx:id="openDatePicker"
                                    GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                        <Label text="Сумма:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <TextField fx:id="initialAmountField"
                                   GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                        <HBox spacing="10.0" alignment="CENTER_RIGHT"
                              GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="4">
                            <Button fx:id="openContractButton" text="Открыть вклад" onAction="#onOpenContract"/>
                        </HBox>
                    </GridPane>
                </content>
            </TitledPane>

            <!-- Блок операций по вкладу -->
            <TitledPane text="Операции по выбранному вкладу" expanded="true">
                <content>
                    <GridPane hgap="10.0" vgap="8.0">
                        <padding>
                            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                        </padding>

                        <columnConstraints>
                            <ColumnConstraints minWidth="100.0"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                            <ColumnConstraints minWidth="100.0"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="Сумма:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="operationAmountField"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Описание:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="operationDescriptionField"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="3"/>

                        <HBox spacing="10.0" alignment="CENTER_RIGHT"
                              GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="4">
                            <Button fx:id="depositButton" text="Пополнить" onAction="#onDeposit"/>
                            <Button fx:id="withdrawButton" text="Снять" onAction="#onWithdraw"/>
                            <Button fx:id="closeContractButton" text="Закрыть вклад" onAction="#onCloseContract"/>
                        </HBox>
                    </GridPane>
                </content>
            </TitledPane>

        </VBox>
    </center>

</BorderPane>
