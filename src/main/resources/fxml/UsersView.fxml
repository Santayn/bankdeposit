<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.santayn.bankdeposit.ui.UsersController">

    <top>
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <Label text="Пользователи системы"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <Label text="Поиск по логину:"/>
            <TextField fx:id="usernameSearchField" prefWidth="180.0"/>

            <Button fx:id="findButton"
                    text="Найти"
                    onAction="#onFindByUsername"/>

            <Button fx:id="resetSearchButton"
                    text="Сбросить"
                    onAction="#onResetSearch"/>

            <Button fx:id="refreshButton"
                    text="Обновить"
                    onAction="#onRefresh"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="8.0">
            <padding>
                <Insets top="0.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <!-- Таблица пользователей -->
            <TableView fx:id="usersTable" prefHeight="260.0">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60.0"/>
                    <TableColumn fx:id="usernameColumn" text="Логин" prefWidth="140.0"/>
                    <TableColumn fx:id="fullNameColumn" text="ФИО" prefWidth="220.0"/>
                    <TableColumn fx:id="roleColumn" text="Роль" prefWidth="120.0"/>
                    <TableColumn fx:id="activeColumn" text="Активен" prefWidth="90.0"/>
                </columns>
            </TableView>

            <!-- Форма редактирования -->
            <TitledPane text="Карточка пользователя" expanded="true">
                <content>
                    <GridPane hgap="10.0" vgap="8.0">
                        <padding>
                            <Insets top="8.0" right="8.0" bottom="8.0" left="8.0"/>
                        </padding>

                        <columnConstraints>
                            <ColumnConstraints minWidth="120.0"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                            <ColumnConstraints minWidth="120.0"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="Логин:"
                               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="usernameField"
                                   promptText="Например, operator1"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Пароль:"
                               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <PasswordField fx:id="passwordField"
                                       promptText="Введите пароль"
                                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="ФИО:"
                               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="fullNameField"
                                   promptText="Например, Иванов Иван Иванович"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Роль:"
                               GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <ComboBox fx:id="roleComboBox"
                                  prefWidth="200.0"
                                  GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                        <Label text="Статус:"
                               GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <HBox spacing="10.0"
                              alignment="CENTER_LEFT"
                              GridPane.rowIndex="1" GridPane.columnIndex="3">
                            <CheckBox fx:id="activeCheckBox" text="Активен"/>
                        </HBox>

                        <Label text="Подсказка:"
                               GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                        <Label fx:id="hintLabel"
                               text="Новый пользователь будет создан при сохранении без выбранной строки."
                               wrapText="true"
                               GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                        <HBox spacing="10.0" alignment="CENTER_RIGHT"
                              GridPane.rowIndex="3" GridPane.columnIndex="0"
                              GridPane.columnSpan="4">
                            <Button fx:id="newButton"
                                    text="Новый"
                                    onAction="#onNewUser"/>
                            <Button fx:id="saveButton"
                                    text="Сохранить"
                                    onAction="#onSaveUser"/>
                            <Button fx:id="deleteButton"
                                    text="Удалить"
                                    onAction="#onDeleteUser"/>
                            <Button fx:id="clearButton"
                                    text="Очистить"
                                    onAction="#onClearForm"/>
                        </HBox>

                    </GridPane>
                </content>
            </TitledPane>

        </VBox>
    </center>

</BorderPane>
