<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.santayn.bankdeposit.ui.ReportsController">

    <top>
        <VBox spacing="8.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="0.0" left="10.0"/>
            </padding>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Отчёты"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <Pane HBox.hgrow="ALWAYS"/>

                <Button fx:id="refreshButton"
                        text="Обновить справочники"
                        onAction="#onRefresh"/>
            </HBox>

            <TitledPane text="Параметры отчёта" expanded="true">
                <content>
                    <GridPane hgap="10.0" vgap="8.0">
                        <padding>
                            <Insets top="8.0" right="8.0" bottom="8.0" left="8.0"/>
                        </padding>

                        <columnConstraints>
                            <ColumnConstraints minWidth="120.0"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                            <ColumnConstraints minWidth="120.0"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                            <ColumnConstraints minWidth="120.0"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <!-- Клиент -->
                        <Label text="Клиент:"
                               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="customerComboBox"
                                  prefWidth="240.0"
                                  GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <!-- Период -->
                        <Label text="Дата с:"
                               GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <DatePicker fx:id="fromDatePicker"
                                    GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                        <Label text="Дата по:"
                               GridPane.rowIndex="0" GridPane.columnIndex="4"/>
                        <DatePicker fx:id="toDatePicker"
                                    GridPane.rowIndex="0" GridPane.columnIndex="5"/>

                        <!-- Тип операции -->
                        <Label text="Тип операции:"
                               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="operationTypeComboBox"
                                  prefWidth="240.0"
                                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <!-- Кнопки построения -->
                        <HBox spacing="10.0" alignment="CENTER_LEFT"
                              GridPane.rowIndex="1" GridPane.columnIndex="2"
                              GridPane.columnSpan="4">
                            <Button fx:id="buildContractsButton"
                                    text="Договоры клиента"
                                    onAction="#onBuildCustomerContracts"/>
                            <Button fx:id="buildActiveContractsButton"
                                    text="Активные вклады"
                                    onAction="#onBuildActiveCustomerContracts"/>
                            <Button fx:id="buildOperationsButton"
                                    text="Операции за период"
                                    onAction="#onBuildOperationsByPeriod"/>
                            <Button fx:id="clearButton"
                                    text="Очистить"
                                    onAction="#onClearResults"/>
                        </HBox>

                    </GridPane>
                </content>
            </TitledPane>
        </VBox>
    </top>

    <center>
        <VBox spacing="8.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <SplitPane orientation="VERTICAL" dividerPositions="0.5">
                <items>

                    <!-- Таблица договоров -->
                    <VBox spacing="4.0">
                        <Label text="Результат: договоры"/>

                        <TableView fx:id="contractsTable" prefHeight="220.0">
                            <columns>
                                <TableColumn fx:id="contractNumberColumn"
                                             text="№ договора" prefWidth="120.0"/>
                                <TableColumn fx:id="customerColumn"
                                             text="Клиент" prefWidth="200.0"/>
                                <TableColumn fx:id="productColumn"
                                             text="Продукт" prefWidth="180.0"/>
                                <TableColumn fx:id="statusColumn"
                                             text="Статус" prefWidth="90.0"/>
                                <TableColumn fx:id="openDateColumn"
                                             text="Открыт" prefWidth="110.0"/>
                                <TableColumn fx:id="closeDateColumn"
                                             text="Закрыт" prefWidth="110.0"/>
                                <TableColumn fx:id="initialAmountColumn"
                                             text="Начальная сумма" prefWidth="140.0"/>
                                <TableColumn fx:id="currentBalanceColumn"
                                             text="Текущий баланс" prefWidth="140.0"/>
                                <TableColumn fx:id="rateColumn"
                                             text="%% годовых" prefWidth="110.0"/>
                            </columns>
                        </TableView>
                    </VBox>

                    <!-- Таблица операций -->
                    <VBox spacing="4.0">
                        <Label text="Результат: операции"/>

                        <TableView fx:id="operationsTable" prefHeight="200.0">
                            <columns>
                                <TableColumn fx:id="opDateTimeColumn"
                                             text="Дата и время" prefWidth="160.0"/>
                                <TableColumn fx:id="opTypeColumn"
                                             text="Тип операции" prefWidth="140.0"/>
                                <TableColumn fx:id="opAmountColumn"
                                             text="Сумма" prefWidth="120.0"/>
                                <TableColumn fx:id="opContractColumn"
                                             text="№ договора" prefWidth="120.0"/>
                                <TableColumn fx:id="opDescriptionColumn"
                                             text="Описание" prefWidth="300.0"/>
                            </columns>
                        </TableView>
                    </VBox>

                </items>
            </SplitPane>

        </VBox>
    </center>

</BorderPane>
